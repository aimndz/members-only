<div class="w-96 self-center">
  <h1 class="font-bold text-3xl mb-10"><%= title %></h1>

  <form action="/login" method="POST" class="space-y-5">
    <div>
      <!-- Username input -->
      <%-include("partials/input", {text: "Username", name: "username", type: "text", value: (locals.inputs && locals.inputs.username) || '', placeholder: "Enter username" }) %>
      <!-- Username errors -->
      <%- include('partials/error', { errors: locals.errors, field: 'username' }) %>
    </div>

    <div>
      <!-- Password input -->
      <%-include("partials/input", {text: "Password", name: "password", type: "password", value: (locals.inputs && locals.inputs.password) || '', placeholder: "Enter password" }) %>
      <!-- Password errors -->
      <%- include('partials/error', { errors: locals.errors, field: 'password' }) %>
    </div>

    <!-- Authentication error -->
    <%- include('partials/error', { errors: locals.errors, field: 'authentication' }) %>

    <!-- Submit button -->
    <%- include('partials/button', {text: "Login"}) %>
  </form>

  <a href="/sign-up" class="underline mt-3 block text-center">Don't have an account? <span class="font-semibold">Sign up</span></a>
</div>