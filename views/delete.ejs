<div class="w-full self-center mx-auto flex flex-col items-center">
  <h1 class="max-w-2xl text-secondary-400 font-bold text-7xl text-center"><%= title %></h1>

  <p class="text-primary-100 mt-10 max-w-96 text-center"><em>Are you sure you want to delete this message? This action cannot be undone.</em></p>



  <form action="/<%= message.id%>/delete" method="POST" class="w-96 mt-5 space-y-5">
    <div class="w-full max-w-2xl p-5  w-2xl bg-secondary-500 border border-solid border-secondary-400 rounded-lg mx-auto relative">
      <p class="text-secondary-200 text-xs font-semibold w-full max-w-96 mx-auto mb-3">
        <%= (user.username === message.username) ? "You" : message.username  %>
      </p>
      <p class="font-semibold w-full max-w-96 mx-auto"><%=message.title%></p>
      <p class="text-xs w-full max-w-96 mx-auto"><%=message.text%></p>
    </div>

    <div class="flex gap-5">
      <a href="/" class="p-3 w-full bg-secondary-500 rounded-lg text-primary-100 font-semibold border border-solid border-secondary-400 text-center cursor-pointer">Cancel</a>
      <%- include('partials/button', {text: "Delete"}) %>
    </div>
  </form>
</div>